{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true 
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-unused-vars": [ 2, { "vars": "all", "args": "none" } ],
        "no-unsafe-negation": 2,
        "no-template-curly-in-string": 2,
        "array-callback-return": 2,
        "default-case": 2,
        "valid-jsdoc": 1,

        /* style */
        "indent": [ 2, 4 ],
        "camelcase": 2,
        "brace-style": [ 2, "1tbs", { "allowSingleLine": true } ],
        "comma-spacing": 2,
        "comma-style": 2,
        "computed-property-spacing": 2,
        "key-spacing": 2,
        "keyword-spacing": 2,
        "max-depth": 2, // default is 4
        "max-len": [ 2, 95 ], // default is 80

        /* ES6 */
        "no-var": 2
    }
}